<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="myschedule_current_month_tv">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- 字体样式 start -->
    <style name="chat_date_style">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">#BEBDBE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- action bar title 字体样式 -->
    <style name="ActionBar_title_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    
      <!-- 启动页 -->
      <style name="textTitleStyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/unilogin_cfa9f00</item>
    </style>
    <style name="textInputStyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/unilogin_c606060</item>
        <item name="android:background">@*android:color/transparent</item>
    </style>
    <style name="bottomTabRadioButtonStyle" parent="@style/tabRadioButtonBaseStyle">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/bottom_tab_button_text_color</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/bottom_tab_view_button_backgroud</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="topTabRadioButtonStyle" parent="@style/tabRadioButtonBaseStyle">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@*android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/top_tab_bg_selector</item>
    </style>
    <style name="SearchResultRadioButtonStyle" parent="@style/tabRadioButtonBaseStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">45.0dip</item>
    </style>
    <style name="tabRadioButtonBaseStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="weatherTextStyle">
        <item name="android:shadowColor">#87000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="scaleAnimation">
        <item name="android:inAnimation">@anim/scale_in</item>
        <item name="android:outAnimation">@anim/scale_out</item>
    </style>
    <style name="userGuideSubtitleStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/new_user_guide_subtitle_text</item>
    </style>
    <style name="userGuideTitleStyle">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">@color/catalog_listview_item_title_text_color</item>
    </style>

    <style name="homePageFuncBtnStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/catalog_listview_item_title_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="homePageItemSubtitleStyle">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="homePageItemTitleStyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="mddMultiGuideTextStyle">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">@color/new_user_guide_subtitle_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextAppearance_StatusBar_EventContent_Title">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    

</resources>