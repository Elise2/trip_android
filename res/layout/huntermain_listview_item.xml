<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/hunterMainImg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/wengwenglisthear" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/hunterImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_book"
            app:riv_corner_radius="100dip" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/hunter_descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="金秋北京，去慕田峪长城赏红叶" />

        <TextView
            android:id="@+id/hunterPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hunter_descript"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="299"
            android:textColor="#f00"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/priceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hunter_descript"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/hunterPrice"
            android:text="￥"
            android:textColor="#f00" />

        <TextView
            android:id="@+id/hunterFassNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/hunter_descript"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="299" />

        <TextView
            android:id="@+id/hunterFass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hunter_descript"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/hunterFassNum"
            android:text="人喜欢" />

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hunterFass"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>