<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/detailsNotesImg"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/a" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/detailsNotesUserImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/headerimg3"
            app:riv_corner_radius="100dip" />

        <TextView
            android:id="@+id/detailsnotes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/detailsNotesUserImg"
            android:text="自驾宁夏：看佛玩沙走王陵"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsnotes_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/detailsNotesUserImg"
            android:text="by"
            android:textColor="#A0ABB2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/detailsNotesUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsnotes_title"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/detailsNotesUserImg"
            android:text="意识散"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mainNotesTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsnotes_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/detailsNotesUserName"
            android:drawableLeft="@drawable/notedate"
            android:drawablePadding="10dp"
            android:text="2015.09.22"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/oneLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/noteGotime"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_tn_gotime" />

            <TextView
                android:id="@+id/gotimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/noteGotime"
                android:gravity="center"
                android:text="出发时间"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gotime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/gotimeLeft"
                android:gravity="center"
                android:text="2015/07/10"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/oneRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/oneLeft"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/noteCost"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_tn_spend" />

            <TextView
                android:id="@+id/costLeft"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/noteCost"
                android:gravity="center"
                android:text="人均费用"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/costLeft"
                android:gravity="center"
                android:text="5000"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/centerLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/notePerson"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_tn_people" />

            <TextView
                android:id="@+id/goPerson"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/notePerson"
                android:gravity="center"
                android:text="人物"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/goPerson"
                android:gravity="center"
                android:text="一个人"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/centerRight"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/centerLeft" >

            <ImageView
                android:id="@+id/goDays"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_tn_days" />

            <TextView
                android:id="@+id/daysNum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/goDays"
                android:gravity="center"
                android:text="出行天数"
                android:textColor="#aaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/daysNum"
                android:gravity="center"
                android:text="7"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/notetype"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_tn_traffic" />

        <TextView
            android:id="@+id/notetypes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/notetype"
            android:gravity="center"
            android:text="形式"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/types"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/notetypes"
            android:gravity="center"
            android:text="自由行"
            android:textColor="#aaa"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>