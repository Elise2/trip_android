<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >
        

        <ImageView
            android:id="@+id/mainNotesImg"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/a" />
      
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mainNotesUserImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/headerimg3"
            app:riv_corner_radius="100dip" />

        <TextView
            android:id="@+id/notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/mainNotesUserImg"
            android:text="自驾宁夏：看佛玩沙走王陵"
            android:textColor="#fff" />
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mainNotesUserImg"
            android:text="by"
            android:textColor="#A0ABB2"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/mainNotesUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_title"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mainNotesUserImg"
            android:text="意识散"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:drawableLeft="@drawable/notedate"
            android:drawablePadding="10dp"
            android:id="@+id/mainNotesTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mainNotesUserName"
            android:text="2015.09.22"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>